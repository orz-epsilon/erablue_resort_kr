@イベント関数_エンディングイベント_愛の宮殿(動作モード, イベント行id)
#DIMS 動作モード
#DIM イベント行id

SELECTCASE 動作モード
	CASE "設定取得"
		;GE:General Endingの略。汎用エンドの意
		TSTR:コマンド名受渡 = GE02

		;解説文もここで取得
		TSTR:ツールチップ受渡 = 
		TSTR:ツールチップ受渡 += "■엔딩 No.GE02 『사랑의 궁전』<br>"
		TSTR:ツールチップ受渡 += "<br>"
		TSTR:ツールチップ受渡 += "연모계 함락 캐릭터가 100명에 달성하면 맞이하는 범용 엔딩.<br>"
		TSTR:ツールチップ受渡 += "사랑하는 사람들에게 둘러싸인 행복한 생활을 보낸다.<br>"
		TSTR:ツールチップ受渡 += "<br>"
		TSTR:ツールチップ受渡 += "실행 조건: 5,000ZP 소지/연모계 함락 캐릭터 100명 이상<br>"
		TSTR:ツールチップ受渡 += "해방 요소: 정주 슬롯을 20칸 증가<br>"
		TSTR:ツールチップ受渡 += "엔딩 시청 후: 현재 회차를 계속<br>"
	CASE "発生条件"
		;リストに表示するための条件
		;一回表示したらその後条件を満たさなくなっても表示したままなので注意
		SIF リゾートランク < 2
			RETURN 0
		SIF あなた恋慕人数() < 100
			RETURN 0
		RETURN 1
	CASE "実行条件"
		;リストから実行するための条件
		;満たしてない間は実行ボタンが灰色で表示され、クリック不可
		SIF FLAG:ZP所持量 < 5000
			RETURN 0
		SIF あなた恋慕人数() < 100
			RETURN 0
		RETURN 1
	CASE "実処理"
		SIF !FLAG:クリア済み視聴フラグ
			FLAG:ZP所持量 -= 5000

		;文章部分はここに記載するよりも別関数に分ける方が見やすいし書きやすいので推奨
		CALL エンディングイベント_シナリオ_愛の宮殿()
		RETURN RESULT
ENDSELECT

