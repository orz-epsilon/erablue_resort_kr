@イベント関数_エンディングイベント_性欲の城(動作モード, イベント行id)
#DIMS 動作モード
#DIM イベント行id

SELECTCASE 動作モード
	CASE "設定取得"
		;GE:General Endingの略。汎用エンドの意
		TSTR:コマンド名受渡 = GE03

		;解説文もここで取得
		TSTR:ツールチップ受渡 = 
		TSTR:ツールチップ受渡 += "■엔딩No.GE03『성욕의 성』<br>"
		TSTR:ツールチップ受渡 += "<br>"
		TSTR:ツールチップ受渡 += "섹스 프렌드 계열 함락 캐릭터가 100명에 달함으로써 맞이하는 범용 엔딩. <br>"
		TSTR:ツールチップ受渡 += "성욕이 이끄는 대로 움직이며, 문란한 성생활을 보낸다. <br>"
		TSTR:ツールチップ受渡 += "<br>"
		TSTR:ツールチップ受渡 += "실행 조건: 5,000ZP 소지/섹스 프렌드 계열 함락 캐릭터 100명 이상<br>"
		TSTR:ツールチップ受渡 += "해방 요소: 종업원 슬롯을 10칸 증가<br>"
		TSTR:ツールチップ受渡 += "엔딩 시청 후: 현재 회차를 계속<br>"
	CASE "発生条件"
		;リストに表示するための条件
		;一回表示したらその後条件を満たさなくなっても表示したままなので注意
		SIF リゾートランク < 2
			RETURN 0
		SIF あなたセフレ人数() < 100
			RETURN 0
		RETURN 1
	CASE "実行条件"
		;リストから実行するための条件
		;満たしてない間は実行ボタンが灰色で表示され、クリック不可
		SIF FLAG:ZP所持量 < 5000
			RETURN 0
		SIF あなたセフレ人数() < 100
			RETURN 0
		RETURN 1
	CASE "実処理"
		SIF !FLAG:クリア済み視聴フラグ
			FLAG:ZP所持量 -= 5000

		;文章部分はここに記載するよりも別関数に分ける方が見やすいし書きやすいので推奨
		CALL エンディングイベント_シナリオ_性欲の城()
		RETURN RESULT
ENDSELECT

