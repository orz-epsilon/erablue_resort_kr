
@COMNAME_S62_4
#FUNCTIONS
TSTR:コマンド名受渡 = 뿔 핸들 A

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_62_4
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("Ａ系")
弱点コマンドカテゴリ = A_角
オートコマンド許可 = 1

@COM_TOOLTIP_S62_4
LOCALS = <br>■각 핸들 A<br>
LOCALS += "뒤에서 A 삽입 시, 뿔을 잡고 강하게 몰아붙이는 커맨드.<br>A 후배위, A 스탠딩 백 모드일 때만 실행 가능."
LOCALS += "<br>COM 타입: A계<br>획득 소스: 정복・쾌A・접촉・고통・불결(일정 조건 시)"
LOCALS += "<br>고유 획득 경험: A성교 경험(TARGET)・C성교 경험_A삽입(PLAYER)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM_S62_4
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_征服(PLAYER, TARGET, 150)
CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 400)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 150)

CALL SOURCE_CALC_快Ｃ(PLAYER, TARGET, 400)

;苦痛
LOCAL = 200 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)

;貞操観念
IF !TALENT:恋慕
	IF TALENT:貞操 == 1
		CALL SOURCE_CALC_不潔(TARGET, PLAYER, 500)
	ELSEIF TALENT:貞操 == 0
		CALL SOURCE_CALC_不潔(TARGET, PLAYER, 250)
	ENDIF
ENDIF

CALL SOURCE_CALC_苦痛(TARGET, PLAYER, 200)
RCVAR:TARGET:苦痛コマンドフラグ = 1

;-------------------------------------------------
;経験の処理
;-------------------------------------------------
EXP:PLAYER:Ｃ性交経験_Ａ挿入 ++
EXP:Ａ性交経験 ++

;同性愛
SIF 同性愛性癖判定(TARGET,PLAYER)
	EXP:TARGET:同性愛経験 += 4
SIF 同性愛性癖判定(PLAYER,TARGET)
	EXP:PLAYER:同性愛経験 += 4

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE_S62_4
;実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE_S("62_4")
	RETURN RESULT
;角必須
SIF !TALENT:TARGET:角あり
	RETURN 0
;体格問題 TARGETのほうが3サイズ大きいと届かない
SIF 体格差計算(PLAYER, TARGET) >= 3
	RETURN 0
;後ろから系モードじゃない時はアウト
SIF !MODE_存在判定_完全一致("Ａ後背位", PLAYER, TARGET) && !MODE_存在判定_完全一致("Ａ立ちバック", PLAYER, TARGET)
	RETURN 0
;指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM_S62_4
#DIM 同時キャラ番号
PRINTFORM %CALLNAME:PLAYER%는
PRINTFORML %CALLNAME:TARGET%의 뿔을 잡고, 핸들처럼 다루면서 세게 허리를 박았다


