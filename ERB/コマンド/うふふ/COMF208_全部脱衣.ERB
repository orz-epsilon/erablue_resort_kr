@CAN_COM208(ARG)
#DIM CONST 必要実行値 = 20
#DIM 実行値
#DIM ＋表示フラグ

SIF RFLAG:指示モード対象あなたフラグ
	RETURN 1

SKIPDISP ARG
PRINTFORML 모두 벗기기(%CALLNAME:TARGET%)
;-------------------------------------------------
;実行判定処理
