;-------------------------------------------------
;オナホール
;道具使用コマンド、レベル2
;-------------------------------------------------
@COMNAME43
#FUNCTIONS
TSTR:コマンド名受渡 = 오나홀

;弱点コマンド欄に専用の文字列を表示したい場合、これを設定すること
弱点コマンド欄表示名 = オナホール


;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_43
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("道具系")
弱点コマンドカテゴリ = C_ちんこ
同時モード許可 = 999


@COM_TOOLTIP_43
LOCALS = <br>■오나홀<br>
LOCALS += "페니스에 자동으로 진동하는 성구를 장착하여 자극하는 커맨드. <br>오나홀 장비 상태가 되어, 해제하거나 성행위를 종료할 때까지 지속적으로 쾌락이 발생한다."
LOCALS += "<br>COM 타입: 도구계<br>획득 소스: 쾌C・노출・접촉"
LOCALS += "<br>고유 획득 경험: 도구 사용 경험(PLAYER)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM43
#DIM 強さ初期値記録

IF OPTION変数:オナホール強さ初期値 == -1
	$選択LOOP
	PRINTL
	PRINTL
	PRINTL
	DRAWLINE
	PRINTL ■강도의 초기값을 선택해주세요
	PRINT 　　오나홀 강도:
	PRINTBUTTON "[-]", -1
	FOR LOCAL, 0, 6
		IF 強さ初期値記録 >= LOCAL
			PRINTBUTTON "■", LOCAL
		ELSE
			PRINTBUTTON "□", LOCAL
		ENDIF
	NEXT
	PRINTBUTTON "[+]", "6"
	PRINTL
	PRINTL
	PRINTBUTTONLC "[900] 오나홀을 장착한다", 900
	PRINTBUTTONLC "[999] 돌아간다", 999

	BINPUT
	LOCAL = RESULT
	SELECTCASE LOCAL
		CASE 0 TO 5
			強さ初期値記録 = LOCAL
			GOTO 選択LOOP
		CASE -1
			強さ初期値記録 = MAX(強さ初期値記録 - 1, 0)
			GOTO 選択LOOP
		CASE 6
			強さ初期値記録 = MIN(強さ初期値記録 + 1, 5)
			GOTO 選択LOOP
		CASE 900
			;着脱の処理
			CALL MODE_CHANGE("オナホール", PLAYER, TARGET, , , 強さ初期値記録)
		CASE 999
			RETURN -1
	ENDSELECT
ELSE
	;着脱の処理
	CALL MODE_CHANGE("オナホール", PLAYER, TARGET, , , OPTION変数:オナホール強さ初期値)
ENDIF

;-------------------------------------------------
;COM別FLAGの設定
;-------------------------------------------------

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_快Ｃ(TARGET, PLAYER,200)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 20)
CALL SOURCE_CALC_接触(TARGET, PLAYER, 10)
;-------------------------------------------------
;経験の処理
;-------------------------------------------------
;同性愛
SIF 同性愛性癖判定(TARGET,PLAYER)
	EXP:TARGET:同性愛経験 += 1
SIF 同性愛性癖判定(PLAYER,TARGET)
	EXP:PLAYER:同性愛経験 += 1

EXP:PLAYER:道具使用経験 ++
RCVAR:TARGET:道具コマンドフラグ = 1


RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE43
;オナホール実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(43)
	RETURN RESULT
;使用済みだとだめ
SIF MODE_存在判定_ターゲット側("オナホール", TARGET)
	RETURN 0
;ちんこがない場合駄目
SIF TALENT:TARGET:Ｃ感度 == -2
	RETURN 0
SIF GETBIT(TALENT:TARGET:性別, 1) == 0
	RETURN 0
;アイテムを持っているか、アイテムなし設定でないとダメ
SIF ITEM:3 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
;前鎧、めくれない服、タイツ、下着があると無理
SIF TEQUIP:下腹部前鎧あり
	RETURN 0
SIF TEQUIP:下半身服あり && (!TEQUIP:スカートめくり可 && !TEQUIP:ずらし可)
	RETURN 0
SIF TEQUIP:下タイツあり && !TEQUIP:下タイツ破れ
	RETURN 0
SIF TEQUIP:下半身下着あり
	RETURN 0

;装着者が指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
;部位使ってると駄目
SIF TEQUIP:TARGET:ペニス
	RETURN 0
RETURN 1

