;===================================================
;実行可能判定
;===================================================
@COM_ABLE90
;貝合わせ実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(90)
	RETURN RESULT

;PLAYER側の判定
SIF !疑似性交COM_ABLE_女性キャラ(PLAYER)
	RETURN 0
;TARGET側の判定
SIF !疑似性交COM_ABLE_女性キャラ(TARGET)
	RETURN 0
;潤滑が高くないとダメ(両者の合計)
SIF PALAM:PLAYER:潤滑 + PALAM:TARGET:潤滑 < 2000
	RETURN 0

;お風呂場プレイ中はプレイマットが無いとダメ
IF BATHROOM(CFLAG:PLAYER:現在マップ種別, CFLAG:PLAYER:現在位置)
	SIF ITEM:プレイマット == 0 && NOITEM == 0
		RETURN 0
ENDIF
RETURN 1


