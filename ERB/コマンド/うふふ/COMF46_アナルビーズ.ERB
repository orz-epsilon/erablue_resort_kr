;-------------------------------------------------
;アナルビーズ
;道具使用コマンド、レベル3
;-------------------------------------------------
@COMNAME46
#FUNCTIONS
TSTR:コマンド名受渡 = 애널 비즈

;弱点コマンド欄に専用の文字列を表示したい場合、これを設定すること
弱点コマンド欄表示名 = アナルビーズ



;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_46
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("道具系&Ａ系")
弱点コマンドカテゴリ = A
SIF !MODE_存在判定_ターゲット側("アナルビーズ", TARGET) && 初期設定中 == 0
	弱点コマンドカテゴリ = 
同時モード許可 = 999



@COM_TOOLTIP_46
LOCALS = <br>■애널 비즈<br>
LOCALS += "애널 비즈를 삽입하여 장내를 자극하는 커맨드. <br>애널 비즈 장비 상태가 되어, 빼거나 성행위를 종료할 때까지 지속적으로 쾌락이 발생한다."
LOCALS += "<br>COM 타입: 도구계<br>획득 소스: 쾌A・노출・접촉・고통"
LOCALS += "<br>고유 획득 경험: 도구 사용 경험(PLAYER)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM46
;着脱の処理
CALL MODE_CHANGE("アナルビーズ", PLAYER, TARGET)

;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------

CALL SOURCE_CALC_接触(TARGET, PLAYER, 20)

LOCAL = 200 * PAIN_CHECK_A(TARGET) / 1000
CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)

;装着時
CALL SOURCE_CALC_快Ａ(TARGET, PLAYER, 200)
CALL SOURCE_CALC_露出(TARGET, PLAYER, 50)

;-------------------------------------------------
;経験の処理
;-------------------------------------------------

;同性愛
SIF 同性愛性癖判定(TARGET,PLAYER)
	EXP:TARGET:同性愛経験 += 1
SIF 同性愛性癖判定(PLAYER,TARGET)
	EXP:PLAYER:同性愛経験 += 1

EXP:PLAYER:道具使用経験 ++
RCVAR:TARGET:道具コマンドフラグ = 1

RETURN 1
;-------------------------------------------------
;実行判定
;-------------------------------------------------

@COM_ABLE46
;アナルビーズ実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE(46)
	RETURN RESULT
;すでに使ってるとだめ
;SIF MODE_存在判定_ターゲット側("アナルビーズ", TARGET)
;	RETURN 0
;Aがない場合駄目
SIF TALENT:TARGET:Ａ感度 == -2
	RETURN 0
;アイテムを持っているか、アイテムなし設定でないとダメ
SIF ITEM:6 == 0 && NOITEM == 0
	RETURN 0

;下半身着衣
;後鎧、めくれない服、タイツがあると無理
SIF TEQUIP:下腹部後鎧あり
	RETURN 0
SIF TEQUIP:下半身服あり && (!TEQUIP:スカートめくり可 && !TEQUIP:ずらし可)
	RETURN 0
SIF TEQUIP:下タイツあり && !TEQUIP:下タイツ破れ
	RETURN 0

;装着者が指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
;部位使ってると駄目
SIF TEQUIP:TARGET:アナル && !TFLAG:コマンド条件制御用
	RETURN 0
RETURN 1

