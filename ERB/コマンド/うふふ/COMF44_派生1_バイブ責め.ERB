
@COMNAME_S44_1
#FUNCTIONS
TSTR:コマンド名受渡 = 바이브 고문
SIF MODE_存在判定_ターゲット側("バイブ", PLAYER)
	TSTR:コマンド名受渡 = 바이브 자위

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_S_44_1
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("道具系&Ｖ系")
弱点コマンドカテゴリ = V
オートコマンド許可 = 1

@COM_TOOLTIP_S44_1
LOCALS = <br>■バイブ責め<br>
LOCALS += "바이브가 삽입되어 있는 상대에게, 바이브를 움직여 고문하는 커맨드.<br>바이브가 삽입되어 있는 것이 자신인 경우, 바이브 자위가 된다."
LOCALS += "<br>COM 타입: 도구계<br>획득 소스: 쾌V・접촉・고통"
LOCALS += "<br>고유 획득 경험: 도구 사용 경험(PLAYER)・V 경험(TARGET)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM_S44_1
;-------------------------------------------------
;ソース追加処理
;-------------------------------------------------
IF MODE_存在判定_ターゲット側("バイブ", PLAYER)
	CALL SOURCE_CALC_快Ｖ(PLAYER, -1, 500)
ELSE
	CALL SOURCE_CALC_快Ｖ(TARGET, PLAYER, 500)
	CALL SOURCE_CALC_接触(TARGET, PLAYER, 100)
	CALL SOURCE_CALC_接触(PLAYER, TARGET, 100)

	;苦痛
	LOCAL = 200 * PAIN_CHECK_V(TARGET) / 1000
	CALL SOURCE_CALC_苦痛(TARGET, PLAYER, LOCAL)
ENDIF

RCVAR:TARGET:道具コマンドフラグ = 1

RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE_S44_1
;Ｇスポ責め実行判定
SIF SAVESTR:ゲームフェイズ管理 != "通常モード"
	RETURN 0
;一括管理
SIF GLOBAL_COMABLE_S("44_1")
	RETURN RESULT
;バイブモードじゃない時はアウト
SIF !MODE_存在判定_ターゲット側("バイブ", PLAYER) && !MODE_存在判定_ターゲット側("バイブ", TARGET)
	RETURN 0

;指を何かに使ってるなら無理
SIF TEQUIP:PLAYER:指
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM_S44_1
#DIM 同時キャラ番号
PRINTFORM %CALLNAME:PLAYER%는
IF MODE_存在判定_ターゲット側("バイブ", PLAYER)
	PRINTFORML 스스로가 물고 있는 바이브를 움직여, 강한 쾌락을 탐했다…
ELSE
	PRINTFORML %CALLNAME:TARGET%가 물고 있는 바이브를 움직여, 강한 쾌락을 안겨주었다…
ENDIF


