		ELSE
			PRINTBUTTON @"[{LOCAL + 100}] %TSTR:コマンド名受渡%", LOCAL + 100
			PRINTL 
		ENDIF
	ENDIF
NEXT


PRINTL
PRINTBUTTON "[999] 돌아가기", 999
PRINTL

DRAWLINE
BINPUT

LOCAL = RESULT
SELECTCASE LOCAL
	CASE 999
		RETURN -1
	CASE IS < 100
		CALL 性処理業務交渉処理(TARGET, 選択先順番制御:LOCAL)
		SIF RESULT == -1
			RESTART
			
		IF STRFIND(コマンド初回フラグ:TARGET:0, @"-WORKING_%選択先順番制御:LOCAL%-") < 0
