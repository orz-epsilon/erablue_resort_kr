IF RSTR:コマンド結果受渡し文字列 != "元の衣装"
	IF EXIST画像FILE(@"resources/%CSTR:PLAYER:画像フォルダ%/短冊_%RSTR:コマンド結果受渡し文字列%")
		CALL PRINT_STRL(@"IMAGEPATH_%CSTR:PLAYER:画像フォルダ%/短冊_%RSTR:コマンド結果受渡し文字列%")
	ENDIF
ENDIF

