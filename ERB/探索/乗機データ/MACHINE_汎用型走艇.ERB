@乗機兵装関数_汎用型走艇_0(処理モード)
;数字部分は武装登録の番号と対応させること
#DIMS 処理モード
#DIM 武装番号
;武装番号は武装登録の番号と対応させること
武装番号 = 0
LOCALS = 

SELECTCASE 処理モード
	CASE "アビ名"
		TSTR:コマンド名受渡 = 슬립스트림
	CASE "残弾セット"
		;残弾種別 0:戦闘中回数制限 1:探索中回数制限 2:クールダウンターン発生
		乗機残弾種別:武装番号 = 2
		乗機残弾数:武装番号 = 3
	CASE "アビ説明文"
		LOCALS += @"　%残弾種別名:(乗機残弾種別:武装番号)%제한:{乗機残弾数:武装番号, 2}턴<br>"
		LOCALS += "　효과: 아군 전체의 행동 속도를 3턴[50%/탑승기 칸] 상승시킨다. <br>"
		LOCALS += "　　　　아군 전체의 DA율을 3턴[20%/탑승기 칸] 상승시킨다. <br>"
		LOCALS += "　　　　서브 멤버 탑재 시, 추가로 TA율을 3턴[10%/탑승기 칸] 상승시킨다. <br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_味方全体_生者のみ
		アビ汎用変数:効果割合 = 50
		アビ汎用文字列:バフ・デバフ枠 = 행동속도_탑승기
		アビ汎用文字列:バフ・デバフ対象能力 = 행동속도
		アビ汎用変数:持続ターン = 3
		CALL アビテンプレート_有利効果_バフ効果セット

		CALL アビ汎用変数文字列リセット
		アビ汎用変数:効果割合 = 20
		アビ汎用文字列:バフ・デバフ枠 = DA율_탑승기
		アビ汎用文字列:バフ・デバフ対象能力 = DA율
		アビ汎用変数:持続ターン = 3
		CALL アビテンプレート_有利効果_バフ効果セット

		IF サブメンバーステータス取得("Lv") > 0
			CALL アビ汎用変数文字列リセット
			アビ汎用変数:効果量 = 10
			アビ汎用文字列:バフ・デバフ枠 = TA율_탑승기
			アビ汎用文字列:バフ・デバフ対象能力 = TA율_탑승기
			アビ汎用変数:持続ターン = 3
			CALL アビテンプレート_有利効果_バフ効果セット
		ENDIF
ENDSELECT

@乗機兵装関数_汎用型走艇_1(処理モード, 兵器id = 0)
;数字部分は武装登録の番号と対応させること
#DIMS 処理モード
#DIM 武装番号
#DIM 兵器id
;武装番号は武装登録の番号と対応させること
武装番号 = 1
LOCALS = 

SELECTCASE 処理モード
	CASE "アビ名", "アビ効果"
		;兵装処理系は装備してる兵装の関数に投げる
		TRYCCALLFORM 搭載兵器関数_%DT_CELL_GETS("所持兵器データベース", 兵器id, "兵器名", 1)%(処理モード, 兵器id)
		CATCH
			PRINTW 처리가 올바르지 않습니다
			アビテンプレート用_キャンセルフラグ = 1
			RETURN -1
		ENDCATCH
	CASE "アビ説明文"
		LOCALS += @"　%残弾種別名:(乗機残弾種別:武装番号)%제한: 남은{乗機残弾数:武装番号, 2}회<br>"
		TRYCCALLFORM 搭載兵器関数_%DT_CELL_GETS("所持兵器データベース", 兵器id, "兵器名", 1)%(処理モード, 兵器id)
			詳細文文字列受け渡し変数 = %LOCALS%%詳細文文字列受け渡し変数%
		CATCH
			PRINTW 처리가 올바르지 않습니다
			アビテンプレート用_キャンセルフラグ = 1
			RETURN -1
		ENDCATCH
	CASE "残弾セット"
		乗機残弾種別:武装番号 = DT_CELL_GET("所持兵器データベース", 兵器id, "残弾種別", 1)
		乗機残弾数:武装番号 = DT_CELL_GET("所持兵器データベース", 兵器id, "残弾数_強化後", 1)
;---------------------------------------------------------------------------------------------------------
;編集するのはここから
	CASE "装備条件説明文"
		LOCALS += @"　장비 가능 카테고리: 기계 계열or마법 계열<br>"
		LOCALS += "　장비 가능 거리: 원거리<br>"
		LOCALS += "　기타 조건: 없음<br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "装備条件判定"
		;装備不可だと0、可能だと1を返す
		SIF 乗機装備条件判定(兵器id, "機械系_魔法系", "遠距離")
			RETURN 1
		RETURN 0
;編集するのはここまで
;---------------------------------------------------------------------------------------------------------
ENDSELECT

