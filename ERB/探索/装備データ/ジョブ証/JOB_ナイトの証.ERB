@証関数_ナイトの証(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "ジョブ証種別"
		証関連文字列受け渡し = 일반 직업
	CASE "証名"
		TSTR:コマンド名受渡 = 나이트의 증표
	CASE "クラス名"
		SIF 対象キャラ <= 0
			RETURN 0
		SELECTCASE GET_JOBSKILL_LEVEL(対象キャラ)
			CASE IS >= 3
				RESULTS = ホーリーセイバー
				RESULTS:1 = Class.III
				RETURN 1
			CASE 2
				RESULTS = フォートレス
				RESULTS:1 = Class.II
				RETURN 1
			CASEELSE
				RESULTS = ナイト
				RESULTS:1 = Class.I
				RETURN 1
		ENDSELECT
	CASE "フレーバー"
		詳細文文字列受け渡し変数 '= "방어를 중시한 탱커용 증표.<br>"
		詳細文文字列受け渡し変数 += "아군을 지키고, 상대의 빈틈을 노리는 기술에 능하다.<br>"
		詳細文文字列受け渡し変数 += "인기는 낮지만 중요한 역할을 할 수 있다.<br>"
ENDSELECT

