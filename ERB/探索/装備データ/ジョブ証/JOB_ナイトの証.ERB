@証アビ関数_ナイトの証_1(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード
#DIM LEVEL
#DIM 効果数値, 1
#DIMS CONST アビ名 = "ファランクス"
#DIM CONST 消費ＭＰ = 45
IF 対象キャラ > 0
	LEVEL = GET_JOBSKILL_LEVEL(対象キャラ)
ELSE
	LEVEL = 1
ENDIF
SELECTCASE LEVEL
	CASE IS >= 3
		効果数値:0 = 70
	CASE 2
		効果数値:0 = 60
	CASEELSE
		効果数値:0 = 50
ENDSELECT

SELECTCASE 処理モード
	CASE "アビ名"
		TSTR:コマンド名受渡 '= アビ名
	CASE "アビ説明文"
		詳細文文字列受け渡し変数 '= @"■%アビ名%<br>"
		詳細文文字列受け渡し変数 += @"　소비 MP:{消費ＭＰ}<br>"
		詳細文文字列受け渡し変数 += @"　효과: 아군 전체에게 1회 피격 대미지 감소［{効果数値:0}％］ 효과를 부여한다."
		RETURN 消費ＭＰ
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_味方全体_生者のみ
		アビ汎用文字列:バフ・デバフ枠 = 피격 대미지 감소
		アビ汎用文字列:バフ・デバフ対象能力 = 피격 대미지
		アビ汎用変数:効果割合 = 効果数値:0
		アビ汎用変数:持続回数 = 1
		CALL アビテンプレート_有利効果_バフ効果セット
ENDSELECT

@証アビ関数_ナイトの証_2(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード
#DIM 攻撃対象
#DIM LEVEL
#DIM 効果数値, 2
#DIMS CONST アビ名 = "ドライブバースト"
#DIM CONST 消費ＭＰ = 15
IF 対象キャラ > 0
	LEVEL = GET_JOBSKILL_LEVEL(対象キャラ)
	IF 得意武器判定(対象キャラ, "剣")
	ELSEIF 基礎BATTLE_STATE:対象キャラ:ステータスタイプ保存 == タイプ文字列数値変換("バランス")
	ELSE
		LEVEL --
	ENDIF
ELSE
	LEVEL = 1
ENDIF
SELECTCASE LEVEL
	CASE IS >= 3
		効果数値:0 = 200
		効果数値:1 = 70
	CASE 2
		効果数値:0 = 150
		効果数値:1 = 50
	CASEELSE
		効果数値:0 = 100
		効果数値:1 = 30
ENDSELECT

SELECTCASE 処理モード
	CASE "アビ名"
		SIF LEVEL > 0
			TSTR:コマンド名受渡 '= アビ名
	CASE "アビ説明文"
		IF 対象キャラ <= 0
			詳細文文字列受け渡し変数 '= @"■%アビ名% (장비자가 검 특기or밸런스 타입일 때)<br>"
		ELSE
			詳細文文字列受け渡し変数 '= @"■%アビ名%<br>"
		ENDIF
		詳細文文字列受け渡し変数 += @"　소비 MP:{消費ＭＰ}<br>"
		詳細文文字列受け渡し変数 += @"　효과: 적 가로열에 자신의 속성 ［공격력✕{効果数値:0}％］ 대미지를 준다.<br>"
		詳細文文字列受け渡し変数 += @"　　　　대상 차치 턴 1개당 위력이 ［{効果数値:1}％］ 상승한다."
		RETURN 消費ＭＰ
	CASE "アビ効果"
		アビ汎用文字列:選択時メッセージ１ = 어떤 가로줄에 사용하시겠습니까?
		CALL アビ対象選択テンプレート_敵単体
		;本来「CALL アビ対象選択テンプレート_敵横列」を使うべきだが、相手によって威力が変動するため
		;手動で処理を行う
		SIF アビテンプレート用_キャンセルフラグ
			RETURN -1
		攻撃対象 = アビテンプレート用_対象保存:0
		アビ汎用変数:効果割合 = 効果数値:0 + (敵BATTLE_STATE:(攻撃対象 - 10):チャージターン * 効果数値:1)
		CALL アビテンプレート_ダメージ処理_自属性
		IF 攻撃対象 % 2
			攻撃対象 -= 1
		ELSE
			攻撃対象 += 1
		ENDIF
		IF 敵BATTLE_STATE_STR:(攻撃対象 - 10):エネミー名 != "" && 敵BATTLE_STATE:(攻撃対象 - 10):ＨＰ > 0
			CALL アビ対象選択テンプレート_指定(攻撃対象)
			アビ汎用変数:効果割合 = 効果数値:0 + (敵BATTLE_STATE:(攻撃対象 - 10):チャージターン * 効果数値:1)
			CALL アビテンプレート_ダメージ処理_自属性
		ENDIF
ENDSELECT

@証アビ関数_ナイトの証_3(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード
#DIM LEVEL
#DIM 効果数値, 1
#DIMS CONST アビ名 = "かばう"
#DIM CONST 消費ＭＰ = 20
IF 対象キャラ > 0
	LEVEL = GET_JOBSKILL_LEVEL(対象キャラ)
	IF 得意武器判定(対象キャラ, "槍")
	ELSEIF 基礎BATTLE_STATE:対象キャラ:ステータスタイプ保存 == タイプ文字列数値変換("防御")
	ELSE
		LEVEL --
	ENDIF
ELSE
	LEVEL = 1
ENDIF
SELECTCASE LEVEL
	CASE IS >= 3
		効果数値:0 = 35
	CASE 2
		効果数値:0 = 25
	CASEELSE
		効果数値:0 = 0
ENDSELECT

SELECTCASE 処理モード
	CASE "アビ名"
		SIF LEVEL > 0
			TSTR:コマンド名受渡 '= アビ名
	CASE "アビ説明文"
		IF 対象キャラ <= 0
			詳細文文字列受け渡し変数 '= @"■%アビ名%（장비자가 창 특기or방어 타입일 때）<br>"
		ELSE
			詳細文文字列受け渡し変数 '= @"■%アビ名%<br>"
		ENDIF
		詳細文文字列受け渡し変数 += @"　소비 MP：{消費ＭＰ}<br>"
		詳細文文字列受け渡し変数 += "　효과: 자신에게 다음 행동 시까지, 모든 단일 공격을 아군 대신 받는 효과를 부여한다."
		IF 効果数値:0 > 0
			詳細文文字列受け渡し変数 += "<br>"
			詳細文文字列受け渡し変数 += @"　　　　자신의 방어력을 다음 행동 시까지［{効果数値:0}％/고유 칸] 증가시킨다."
		ENDIF
		RETURN 消費ＭＰ
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_自己のみ
		アビ汎用文字列:バフ・デバフ枠 = 단일 커버
		アビ汎用文字列:バフ・デバフ対象能力 = 단일 커버
		;1にするとかばう使った直後に消えてしまうので2で設定
		アビ汎用変数:持続行動回数 = 2
		CALL アビテンプレート_有利効果_バフ効果セット
		IF 効果数値:0 > 0
			CALL アビ汎用変数文字列リセット
			アビ汎用文字列:バフ・デバフ枠 = 커버_방어력
			アビ汎用文字列:バフ・デバフ対象能力 = 방어력
			アビ汎用変数:効果割合 = 効果数値:0
			アビ汎用変数:持続行動回数 = 2
			CALL アビテンプレート_有利効果_バフ効果セット
		ENDIF
ENDSELECT

@証アビ関数_ナイトの証_4(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード
#DIMS ガード属性
#DIM LEVEL
#DIM 効果数値, 1
#DIMS CONST アビ名 = "エレメンタルガード"
#DIM CONST 消費ＭＰ = 40
IF 対象キャラ > 0
	LEVEL = GET_JOBSKILL_LEVEL(対象キャラ) - 2
	IF 装備ステータス補正保存:対象キャラ:属性
		ガード属性 '= 属性数値文字列変換(有利属性変換(装備ステータス補正保存:対象キャラ:属性 - 10))
	ELSE
		ガード属性 '= 属性数値文字列変換(有利属性変換(基礎BATTLE_STATE:対象キャラ:属性))
	ENDIF
ELSE
	LEVEL = 0
ENDIF
SELECTCASE LEVEL
	CASEELSE
		効果数値:0 = 50
ENDSELECT

SELECTCASE 処理モード
	CASE "アビ名"
		TSTR:コマンド名受渡 '= アビ名
	CASE "アビ説明文"
		詳細文文字列受け渡し変数 '= @"■%アビ名%<br>"
		詳細文文字列受け渡し変数 += @"　소비 MP：{消費ＭＰ}<br>"
		IF 対象キャラ <= 0
			詳細文文字列受け渡し変数 += @"　효과: 어빌리티 사용자의 유리 속성에 대해, 아군 전체의 내성을 3턴［+{効果数値:0}/A칸]으로 한다."
		ELSE
			詳細文文字列受け渡し変数 += @"　효과: 아군 전체의%ガード属性%내성을 3턴［+{効果数値:0}/A칸]으로 한다."
		ENDIF
		RETURN 消費ＭＰ
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_味方全体_生者のみ
		アビ汎用文字列:バフ・デバフ枠 = %ガード属性%내성A
		アビ汎用文字列:バフ・デバフ対象能力 = %ガード属性%내성
		アビ汎用変数:効果量 = 効果数値:0
		アビ汎用変数:持続ターン = 3
		CALL アビテンプレート_有利効果_バフ効果セット
ENDSELECT

