@証関数_ファイターの証(処理モード, 対象キャラ)
#DIM 対象キャラ
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "ジョブ証種別"
		証関連文字列受け渡し = 일반 직업
	CASE "証名"
		TSTR:コマンド名受渡 = 파이터의 증표
	CASE "クラス名"
		SIF 対象キャラ <= 0
			RETURN 0
		SELECTCASE GET_JOBSKILL_LEVEL(対象キャラ)
			CASE IS >= 3
				RESULTS = ウェポンマスター
				RESULTS:1 = Class.III
				RETURN 1
			CASE 2
				RESULTS = ウォーリア
				RESULTS:1 = Class.II
				RETURN 1
			CASEELSE
				RESULTS = ファイター
				RESULTS:1 = Class.I
				RETURN 1
		ENDSELECT
	CASE "フレーバー"
		詳細文文字列受け渡し変数 '= "초보 전사가 자주 사용하는 전위용 증표.<br>"
		詳細文文字列受け渡し変数 += "간단하고 사용하기 쉬운 어빌리티가 많은 전사들에게 애용되고 있다.<br>"
		詳細文文字列受け渡し変数 += "베테랑이 되어서도 계속 사용하는 전사도 많다고 한다.<br>"
ENDSELECT

