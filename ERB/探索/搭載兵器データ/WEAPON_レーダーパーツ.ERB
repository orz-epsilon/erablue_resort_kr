@搭載兵器関数_レーダーパーツ(処理モード, 兵器id)
#DIMS 処理モード
#DIM 兵器id
#DIM 兵器_공격력補正
#DIM 兵器_명중률補正
#DIM 兵器_공격력変動
#DIM 兵器_명중률変動
#DIM 兵器_残弾種別
#DIM 兵器_残弾数
#DIMS 兵器_カテゴリ
#DIMS 兵器_距離適性
#DIMS 兵器名一時保存
LOCALS = 

SELECTCASE 処理モード
	CASE "兵器登録"
		兵器名一時保存 = レーダーパーツ
		;공격력補正、명중률補正は「その兵器を使用した時に補正を掛ける数値」
		;공격력変動、명중률変動は「その兵器を装備しているだけで乗機のステータスを変える数値」
		兵器_공격력補正 = 0
		兵器_명중률補正 = 0
		兵器_공격력変動 = 0
		兵器_명중률変動 = 10
		;残弾種別 0:戦闘中回数制限 1:探索中回数制限 2:クールダウンターン発生
		兵器_残弾種別 = 2
		兵器_残弾数 = 5
		;カテゴリ 基本は「機械系」と「魔法系」の二択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;距離適性 基本は「近距離」と「遠距離」と「味方支援」の三択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;複数カテゴリをもたせる場合は「近距離_遠距離」のように記載
		兵器_カテゴリ = 機械系
		兵器_距離適性 = 味方支援

		{
		DT_ROW_ADD "所持兵器データベース", "兵器名", 兵器名一時保存, 
			"공격력補正", 兵器_공격력補正, "공격력補正_強化後", 兵器_공격력補正, 
			"명중률補正", 兵器_명중률補正, "명중률補正_強化後", 兵器_명중률補正, 
			"공격력変動値", 兵器_공격력変動, "공격력変動値_強化後", 兵器_공격력変動, 
			"명중률変動値", 兵器_명중률変動, "명중률変動値_強化後", 兵器_명중률変動, 
			"残弾種別", 兵器_残弾種別, "残弾数", 兵器_残弾数, "残弾数_強化後", 兵器_残弾数, 
			"兵器カテゴリ", 兵器_カテゴリ, "兵器距離適性", 兵器_距離適性,
		}
	CASE "フレーバー"
		LOCALS += "아군 전체의 명중률을 올리는 레이더. <br>"
		LOCALS += "재사용까지는 다소 길지만, 충분한 효과 시간을 가진다. <br>"
		LOCALS += "회피력이 높은 상대나, 명중이 불안한 공격을 할 때 유효하다. <br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "作成素材"
		作成素材登録:0 = 古びた歯車_3
	CASE "アビ名"
		TSTR:コマンド名受渡 = 레이더 부품
	CASE "アビ説明文"
		;残弾などの説明文字列は機体側で記述
		LOCALS += "　효과: 아군 전체의 명중률을 3턴 동안 [30%/탑승기 프레임] 상승시킨다. <br>"
		LOCALS += "　　　　서브 멤버 탑재 시, 추가로 크리티컬률을 3턴 동안 [20%/탑승기 프레임] 상승시킨다. <br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_味方全体_生者のみ
		アビ汎用変数:効果量 = 30
		アビ汎用文字列:バフ・デバフ枠 = 명중률_탑승기
		アビ汎用文字列:バフ・デバフ対象能力 = 명중률
		アビ汎用変数:持続ターン = 3
		CALL アビテンプレート_有利効果_バフ効果セット
		IF サブメンバーステータス取得("Lv") > 0
			CALL アビ汎用変数文字列リセット
			アビ汎用変数:効果量 = 20
			アビ汎用文字列:バフ・デバフ枠 = 크리티컬률_탑승기
			アビ汎用文字列:バフ・デバフ対象能力 = 크리티컬률
			アビ汎用変数:持続ターン = 3
			CALL アビテンプレート_有利効果_バフ効果セット
		ENDIF
ENDSELECT

