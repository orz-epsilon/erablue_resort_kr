@搭載兵器関数_バリアジェネレーター(処理モード, 兵器id)
#DIMS 処理モード
#DIM 兵器id
#DIM 兵器_攻撃力補正
#DIM 兵器_命中率補正
#DIM 兵器_공격력変動
#DIM 兵器_명중률変動
#DIM 兵器_残弾種別
#DIM 兵器_残弾数
#DIMS 兵器_カテゴリ
#DIMS 兵器_距離適性
#DIMS 兵器名一時保存
LOCALS = 

SELECTCASE 処理モード
	CASE "兵器登録"
		兵器名一時保存 = バリアジェネレーター
		;攻撃力補正、命中率補正は「その兵器を使用した時に補正を掛ける数値」
		;공격력変動、명중률変動は「その兵器を装備しているだけで乗機のステータスを変える数値」
		兵器_攻撃力補正 = 0
		兵器_命中率補正 = 0
		兵器_공격력変動 = -30
		兵器_명중률変動 = 0
		;残弾種別 0:戦闘中回数制限 1:探索中回数制限 2:クールダウンターン発生
		兵器_残弾種別 = 0
		兵器_残弾数 = 1
		;カテゴリ 基本は「機械系」と「魔法系」の二択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;距離適性 基本は「近距離」と「遠距離」と「味方支援」の三択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;複数カテゴリをもたせる場合は「近距離_遠距離」のように記載
		兵器_カテゴリ = 機械系
		兵器_距離適性 = 味方支援

		{
		DT_ROW_ADD "所持兵器データベース", "兵器名", 兵器名一時保存, 
			"攻撃力補正", 兵器_攻撃力補正, "攻撃力補正_強化後", 兵器_攻撃力補正, 
			"命中率補正", 兵器_命中率補正, "命中率補正_強化後", 兵器_命中率補正, 
			"攻撃力変動値", 兵器_공격력変動, "攻撃力変動値_強化後", 兵器_공격력変動, 
			"命中率変動値", 兵器_명중률変動, "命中率変動値_強化後", 兵器_명중률変動, 
			"残弾種別", 兵器_残弾種別, "残弾数", 兵器_残弾数, "残弾数_強化後", 兵器_残弾数, 
			"兵器カテゴリ", 兵器_カテゴリ, "兵器距離適性", 兵器_距離適性,
		}
	CASE "フレーバー"
		LOCALS += "공격을 튕겨내는 장벽을 발생시키는 장치. <br>"
		LOCALS += "계속되는 전투로 인한 소모를 억제할 수 있으므로, 장시간 탐색에 유효하다. <br>"
		LOCALS += "전투하면서 충전할 수 없으므로, 전투 중에 한 번만 사용할 수 있다. <br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "作成素材"
		作成素材登録:0 = 鉄鉱石_10
		作成素材登録:1 = 海の星砂_5
		作成素材登録:2 = 帯電した珪砂_1
	CASE "アビ名"
		TSTR:コマンド名受渡 = 배리어 전개
	CASE "アビ説明文"
		;残弾などの説明文字列は機体側で記述
		LOCALS += "　효과: 아군 전체에 배리어［100］ 효과를 부여한다. <br>"
		LOCALS += "　　　　서브 멤버 탑재 시, 배리어 내구력을 서브 멤버의 최대HP✕15%만큼 증가시킨다. <br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_味方全体_生者のみ
		アビ汎用文字列:バフ・デバフ枠 = 배리어
		アビ汎用文字列:バフ・デバフ対象能力 = 배리어
		アビ汎用変数:効果量 = 100
		アビ汎用変数:効果量 += サブメンバーステータス取得("최대HP") * 3 / 20
		アビ汎用変数:持続ターン = -1
		CALL アビテンプレート_有利効果_バフ効果セット
ENDSELECT

@兵器開発対象_バリアジェネレーター(処理モード)
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "兵装名"
		RESULTS = バリアジェネレーター
		RETURN
	CASE "優先度"
		SIF MATCH(開拓エリア開発番号, 大規模番号_海エリア) > 0 && 海初来訪イベントフラグ
			RETURN 1
		RETURN 0
	CASE "複雑さ"
		RETURN 4
	CASE "要求知識"
		RETURN GETNUM(知識素質, "機械知識")
ENDSELECT
