@搭載兵器関数_25mmキャニスター砲(処理モード, 兵器id)
#DIMS 処理モード
#DIM 兵器id
#DIM 兵器_攻撃力補正
#DIM 兵器_命中率補正
#DIM 兵器_攻撃力変動
#DIM 兵器_命中率変動
#DIM 兵器_残弾種別
#DIM 兵器_残弾数
#DIMS 兵器_カテゴリ
#DIMS 兵器_距離適性
#DIMS 兵器名一時保存
#DIM 効果回数
LOCALS = 

SELECTCASE 処理モード
	CASE "兵器登録"
		兵器名一時保存 = 25mmキャニスター砲
		;攻撃力補正、命中率補正は「その兵器を使用した時に補正を掛ける数値」
		;攻撃力変動、命中率変動は「その兵器を装備しているだけで乗機のステータスを変える数値」
		兵器_攻撃力補正 = 0
		兵器_命中率補正 = 0
		兵器_攻撃力変動 = 0
		兵器_命中率変動 = 0
		;残弾種別 0:戦闘中回数制限 1:探索中回数制限 2:クールダウンターン発生
		兵器_残弾種別 = 1
		兵器_残弾数 = 5
		;カテゴリ 基本は「機械系」と「魔法系」の二択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;距離適性 基本は「近距離」と「遠距離」と「味方支援」の三択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;複数カテゴリをもたせる場合は「近距離_遠距離」のように記載
		兵器_カテゴリ = 機械系
		兵器_距離適性 = 遠距離

		{
		DT_ROW_ADD "所持兵器データベース", "兵器名", 兵器名一時保存, 
			"攻撃力補正", 兵器_攻撃力補正, "攻撃力補正_強化後", 兵器_攻撃力補正, 
			"命中率補正", 兵器_命中率補正, "命中率補正_強化後", 兵器_命中率補正, 
			"攻撃力変動値", 兵器_攻撃力変動, "攻撃力変動値_強化後", 兵器_攻撃力変動, 
			"命中率変動値", 兵器_命中率変動, "命中率変動値_強化後", 兵器_命中率変動, 
			"残弾種別", 兵器_残弾種別, "残弾数", 兵器_残弾数, "残弾数_強化後", 兵器_残弾数, 
			"兵器カテゴリ", 兵器_カテゴリ, "兵器距離適性", 兵器_距離適性,
		}
	CASE "フレーバー"
		LOCALS += "광범위하게 산탄을 뿌리는 캐니스터 포. <br>"
		LOCALS += "탄환이 부피가 커서 탐색 중에는 재장전할 수 없다. <br>"
		LOCALS += "하지만, 그만큼 공격력은 높다. <br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "作成素材"
		作成素材登録:0 = 鉄鉱石_2
		作成素材登録:1 = 赤熱鉱_3
		作成素材登録:2 = 古びた歯車_2
	CASE "アビ名"
		TSTR:コマンド名受渡 = 25mm 캐니스터 포
	CASE "アビ説明文"
		;残弾などの説明文字列は機体側で記述
		LOCALS += "　효과: 무작위 적에게 [공격력✕90%]의 흙 속성 대미지를 2~6회 준다. <br>"
		LOCALS += "　　　　서브 멤버 탑재 시, 대미지 계수를 서브 멤버의 최대 Lv÷4만큼 증가시킨다. <br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "アビ効果"
		効果回数 = RAND(2, 7)
		FOR LOCAL, 0, 効果回数
			アビ汎用変数:敵対心無視オプション = 1
			CALL アビ対象選択テンプレート_敵ランダムＸ体(1)
			アビ汎用変数:効果割合 = 90
			アビ汎用変数:効果割合 += サブメンバーステータス取得("Lv") / 4
			CALL アビテンプレート_ダメージ処理_土属性
		NEXT
ENDSELECT

@兵器開発対象_25mmキャニスター砲(処理モード)
#DIMS 処理モード
#DIM TMP_SELECT, 1

SELECTCASE 処理モード
	CASE "兵装名"
		RESULTS = 25mmキャニスター砲
		RETURN
	CASE "優先度"
		SIF DT_SELECT("所持兵器データベース", "兵器名 = '10mmバルカン砲' And 設計状態フラグ <> 0", , TMP_SELECT) > 0
			RETURN 1
		RETURN 0
	CASE "複雑さ"
		RETURN 4
	CASE "要求知識"
		RETURN GETNUM(知識素質, "機械知識")
ENDSELECT
