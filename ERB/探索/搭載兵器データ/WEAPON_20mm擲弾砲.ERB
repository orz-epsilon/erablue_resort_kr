@搭載兵器関数_20mm擲弾砲(処理モード, 兵器id)
#DIMS 処理モード
#DIM 兵器id
#DIM 兵器_攻撃力補正
#DIM 兵器_命中率補正
#DIM 兵器_공격력変動
#DIM 兵器_명중률変動
#DIM 兵器_残弾種別
#DIM 兵器_残弾数
#DIMS 兵器_カテゴリ
#DIMS 兵器_距離適性
#DIMS 兵器名一時保存
LOCALS = 

SELECTCASE 処理モード
	CASE "兵器登録"
		兵器名一時保存 = 20mm擲弾砲
		;攻撃力補正、命中率補正は「その兵器を使用した時に補正を掛ける数値」
		;공격력変動、명중률変動は「その兵器を装備しているだけで乗機のステータスを変える数値」
		兵器_攻撃力補正 = 0
		兵器_命中率補正 = 0
		兵器_공격력変動 = 0
		兵器_명중률変動 = 0
		;残弾種別 0:戦闘中回数制限 1:探索中回数制限 2:クールダウンターン発生
		兵器_残弾種別 = 1
		兵器_残弾数 = 8
		;カテゴリ 基本は「機械系」と「魔法系」の二択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;距離適性 基本は「近距離」と「遠距離」と「味方支援」の三択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;複数カテゴリをもたせる場合は「近距離_遠距離」のように記載
		兵器_カテゴリ = 機械系
		兵器_距離適性 = 遠距離

		{
		DT_ROW_ADD "所持兵器データベース", "兵器名", 兵器名一時保存, 
			"攻撃力補正", 兵器_攻撃力補正, "攻撃力補正_強化後", 兵器_攻撃力補正, 
			"命中率補正", 兵器_命中率補正, "命中率補正_強化後", 兵器_命中率補正, 
			"攻撃力変動値", 兵器_공격력変動, "攻撃力変動値_強化後", 兵器_공격력変動, 
			"命中率変動値", 兵器_명중률変動, "命中率変動値_強化後", 兵器_명중률変動, 
			"残弾種別", 兵器_残弾種別, "残弾数", 兵器_残弾数, "残弾数_強化後", 兵器_残弾数, 
			"兵器カテゴリ", 兵器_カテゴリ, "兵器距離適性", 兵器_距離適性,
		}
	CASE "フレーバー"
		LOCALS += "광범위하게 타격을 주는 폭탄을 투사하는 유탄포.<br>"
		LOCALS += "탄환이 부피가 커서 탐색 중에는 재장전할 수 없다.<br>"
		LOCALS += "하지만, 그만큼 탑재 탄수는 많은 편이다.<br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "作成素材"
		作成素材登録:0 = 鉄鉱石_2
		作成素材登録:1 = 赤熱鉱_2
		作成素材登録:2 = 古びた歯車_2
	CASE "アビ名"
		TSTR:コマンド名受渡 = 20mm 유탄포
	CASE "アビ説明文"
		;残弾などの説明文字列は機体側で記述
		LOCALS += "　효과: 적 종열에 [공격력✕100%]의 화속성 데미지를 준다.<br>"
		LOCALS += "　　　　서브 멤버 탑재 시, 데미지 계수를 서브 멤버의 최대 Lv만큼 증가시킨다.<br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_敵縦列
		アビ汎用変数:効果割合 = 100
		アビ汎用変数:効果割合 += サブメンバーステータス取得("Lv")
		CALL アビテンプレート_ダメージ処理_火属性
ENDSELECT

