@搭載兵器関数_スポットライト(処理モード, 兵器id)
#DIMS 処理モード
#DIM 兵器id
#DIM 兵器_공격력補正
#DIM 兵器_명중률補正
#DIM 兵器_공격력変動
#DIM 兵器_명중률変動
#DIM 兵器_残弾種別
#DIM 兵器_残弾数
#DIMS 兵器_カテゴリ
#DIMS 兵器_距離適性
#DIMS 兵器名一時保存
LOCALS = 

SELECTCASE 処理モード
	CASE "兵器登録"
		兵器名一時保存 = スポットライト
		;공격력補正、명중률補正は「その兵器を使用した時に補正を掛ける数値」
		;공격력変動、명중률変動は「その兵器を装備しているだけで乗機のステータスを変える数値」
		兵器_공격력補正 = 0
		兵器_명중률補正 = 0
		兵器_공격력変動 = 50
		兵器_명중률変動 = 0
		;残弾種別 0:戦闘中回数制限 1:探索中回数制限 2:クールダウンターン発生
		兵器_残弾種別 = 2
		兵器_残弾数 = 4
		;カテゴリ 基本は「機械系」と「魔法系」の二択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;距離適性 基本は「近距離」と「遠距離」と「味方支援」の三択。自由文字列なので任意のカテゴリ名を突っ込んでも良い
		;複数カテゴリをもたせる場合は「近距離_遠距離」のように記載
		兵器_カテゴリ = 機械系
		兵器_距離適性 = 味方支援

		{
		DT_ROW_ADD "所持兵器データベース", "兵器名", 兵器名一時保存, 
			"공격력補正", 兵器_공격력補正, "공격력補正_強化後", 兵器_공격력補正, 
			"명중률補正", 兵器_명중률補正, "명중률補正_強化後", 兵器_명중률補正, 
			"공격력変動値", 兵器_공격력変動, "공격력変動値_強化後", 兵器_공격력変動, 
			"명중률変動値", 兵器_명중률変動, "명중률変動値_強化後", 兵器_명중률変動, 
			"残弾種別", 兵器_残弾種別, "残弾数", 兵器_残弾数, "残弾数_強化後", 兵器_残弾数, 
			"兵器カテゴリ", 兵器_カテゴリ, "兵器距離適性", 兵器_距離適性,
		}
	CASE "フレーバー"
		LOCALS += "아군을 밝게 비춤으로써 적의 주의를 끌 수 있는 조명 기구.<br>"
		LOCALS += "방어력이나 회피율이 높은 아군에게 공격을 집중시키면 전투를 유리하게 이끌 수 있을 것이다.<br>"
		LOCALS += "재사용까지의 시간은 다소 길다.<br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "作成素材"
		作成素材登録:0 = 古びた歯車_5
	CASE "アビ名"
		TSTR:コマンド名受渡 = 스포트라이트
	CASE "アビ説明文"
		;残弾などの説明文字列は機体側で記述
		LOCALS += "　효과: 아군 단일 대상에 대한 적대심을 2턴 동안 [+200/탑승기 칸] 증가시킨다.<br>"
		詳細文文字列受け渡し変数 = %LOCALS%
	CASE "アビ効果"
		CALL アビ対象選択テンプレート_味方単体_生者のみ
		アビ汎用文字列:バフ・デバフ枠 = 적대심_탑승기
		アビ汎用文字列:バフ・デバフ対象能力 = 적대심
		アビ汎用変数:効果量 = 200
		アビ汎用変数:持続ターン = 2
		CALL アビテンプレート_有利効果_バフ効果セット
ENDSELECT

@兵器開発対象_スポットライト(処理モード)
#DIMS 処理モード

SELECTCASE 処理モード
	CASE "兵装名"
		RESULTS = スポットライト
		RETURN
	CASE "優先度"
		RETURN 1
	CASE "複雑さ"
		RETURN 2
	CASE "要求知識"
		RETURN GETNUM(知識素質, "機械知識")
ENDSELECT
