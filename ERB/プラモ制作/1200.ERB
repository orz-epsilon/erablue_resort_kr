
@COM_433_1200表示
;所有プラモを確認し、1以上ならデータを挿入する　20行まで
VARSET LOCAL

VARSET プラモ_メッセージウィンドウ下部
;0繰り返し回数　1行数
LOCAL:1 = 1

$LOOP
LOCAL ++
;所有済みかつ完成済みでない
IF プラモ_所有キット:LOCAL >= 1 && プラモ_所有プラ:LOCAL < 100
	RESULT = LOCAL
	TRYCALLFORM プラモデータ{RESULT}
	IF プラモデータ変数:0 > 0
		プラモ_メッセージウィンドウ下部:(LOCAL:1) = [{LOCAL}]%プラモデータ文字列:3%
		LOCAL:1 ++
	ENDIF
ENDIF

;20行埋まった
SIF LOCAL:1 >= 20
	RETURN 0
IF LOCAL < 200
	GOTO LOOP
ENDIF






