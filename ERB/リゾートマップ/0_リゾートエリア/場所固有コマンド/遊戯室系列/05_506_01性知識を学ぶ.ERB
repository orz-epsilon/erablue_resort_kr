@COMNAME_PLACE_380_0_506
#FUNCTION
IF 施設改造度:5:6 == 0
	TSTR:コマンド名受渡 = 
	RETURNF 0
ENDIF
TSTR:コマンド名受渡 = 성지식을 배우다
RETURNF 1
;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_380_0_506
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("日常")
		

@COM_TOOLTIP_380_0_506
LOCALS = <br>■성지식을 배우다<br>
LOCALS += "상대와 함께 성지식을 공부하는 커맨드。<br>"
LOCALS += "<br>COM 타입: 일상<br>획득 소스: 환락・정복(일정 조건 시)"
LOCALS += "<br>고유 획득 경험: 성지식 경험치(TARGET)<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM380_0_506

LOCAL:2 = RAND:100
LOCAL:1 = 教える上手さ(PLAYER, TARGET, 0)
IF LOCAL:2 <= LOCAL:1 / 2
	;上手さ / 2以下で超成功
	RFLAG:コマンド結果受渡し変数 = 1
	EXP:MASTER:会話経験 ++
	性知識経験値:TARGET:0 += 9 + RAND:3
ELSEIF LOCAL:2 <= LOCAL:1
	;上手さ以下で成功
	RFLAG:コマンド結果受渡し変数 = 0
	性知識経験値:TARGET:0 += 7 + RAND:2
ELSE
	;残りは失敗
	RFLAG:コマンド結果受渡し変数 = -1
	性知識経験値:TARGET:0 += 3 + RAND:2
ENDIF

;歓楽強度
LOCAL:0 = 100

IF RFLAG:コマンド結果受渡し変数 == -1
	TIMES LOCAL:0 , 0.10
ELSEIF RFLAG:コマンド結果受渡し変数 == 0
	TIMES LOCAL:0 , 1.00
ELSE
	TIMES LOCAL:0 , 2.00
ENDIF


CALL SOURCE_CALC_歓楽(TARGET, PLAYER, LOCAL:0)
CALL SOURCE_CALC_好感度要素_信頼度UP(TARGET, PLAYER, LOCAL:0 / 2)
CALL SOURCE_CALC_好感度要素_性愛度UP(TARGET, PLAYER, LOCAL:0 / 2)

TCVAR:TARGET:学習フラグ += 80

TIME += 60
EXP:MASTER:会話経験 ++
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE380_0_506
;条件に合う場合0（不許可）を返す
;どの条件にも引っかからないなら1（許可）を返す
;一括管理
SIF GLOBAL_COMABLE(380)
	RETURN RESULT
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;隠密中はダメ
SIF CFLAG:PLAYER:隠密
	RETURN 0
;口を何かに使ってるなら無理
SIF TEQUIP:PLAYER:口
	RETURN 0
SIF TEQUIP:TARGET:口
	RETURN 0
;ある程度好感度が必要
SIF CFLAG:TARGET:好感度レベル <= 関係閾値:3
	RETURN 0
;友人は一日一回まで、親友になると２回まで教えてくれる
SIF CFLAG:TARGET:好感度レベル <= TCVAR:TARGET:学習フラグ
	RETURN 0
;相手の性知識は0以下であること
SIF 知識素質:TARGET:性知識 > 0
	RETURN 0
RETURN 1

