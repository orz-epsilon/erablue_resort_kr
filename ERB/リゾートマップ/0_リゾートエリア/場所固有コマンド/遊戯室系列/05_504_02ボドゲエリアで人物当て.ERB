@COMNAME_PLACE_381_0_504
#FUNCTION
TSTR:コマンド名受渡 = 인물 맞히기 놀이
IF 施設改造度:5:0 == 0
	TSTR:コマンド名受渡 = 
	RETURNF 0
ENDIF
RETURNF 1

;===================================================
;コマンドタイプ
;===================================================
@COMTYPE_381_0_504
#FUNCTION
TFLAG:コマンドタイプ受渡 = COMTYPE("日常")

@COM_TOOLTIP_381_0_504
LOCALS = <br>■인물 맞히기 놀이<br>
LOCALS += "상대와 인물 맞히기 퀴즈로 함께 노는 커맨드. 미니게임 '인물 맞히기'가 발생."
LOCALS += "<br>COM 타입: 일상<br>획득 소스: 환락"
LOCALS += "<br>고유 획득 경험: 없음<br>"
TSTR:ツールチップ受渡 = %LOCALS%

@COM381_0_504
RFLAG:コマンド結果受渡し変数 = 0
RFLAG:コマンド結果受渡し変数２ = 0
RFLAG:コマンド結果受渡し変数３ = 0
;勝敗決定
CALL 人物当てクイズ(TARGET, 6) ;最大カード枚数を指定できる
;コマンド結果に勝敗
;コマンド結果２に自分だったボーナスのありを記憶

;歓楽強度
LOCAL:0 = 500

;当たったときは歓楽・征服共に増加
IF RFLAG:コマンド結果受渡し変数
	LOCAL:0 += 500
ENDIF
;自分だったらもっと嬉しい
IF RFLAG:コマンド結果受渡し変数２
	LOCAL:0 += 500
ENDIF


;歓楽のみ
CALL SOURCE_CALC_歓楽(TARGET, PLAYER, LOCAL:0)
CALL SOURCE_CALC_好感度要素_友情度UP(TARGET, PLAYER, LOCAL:0 / 2)


TIME += 30
RETURN 1

;-------------------------------------------------
;実行判定
;-------------------------------------------------
@COM_ABLE381_0_504
;条件に合う場合0（不許可）を返す
;どの条件にも引っかからないなら1（許可）を返す
;一括管理
SIF GLOBAL_COMABLE(381)
	RETURN RESULT
;睡眠中
SIF CFLAG:睡眠
	RETURN 0
;隠密中はダメ
SIF CFLAG:PLAYER:隠密
	RETURN 0
RETURN 1

;-------------------------------------------------
;実行時メッセージ
;-------------------------------------------------
@MESSAGE_COM381_0_504


PRINTFORML %CALLNAME:PLAYER%와(과) %CALLNAME:TARGET%은(는) 인물 맞히기 퀴즈를 즐겼다.
PRINTL
SIF RFLAG:コマンド結果受渡し変数
	PRINTFORML %CALLNAME:TARGET%은(는) 꽤 즐거웠던 것 같다!
SIF RFLAG:コマンド結果受渡し変数２
	PRINTL ...자신을 맞혀서 뺨이 풀려 있다!
